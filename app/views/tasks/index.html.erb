<div class="container">
  <h1>Tasks for today!</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
    <%= link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
    <li><%= link_to "Create new task", new_task_path%></li>
  </ul>
</div>
